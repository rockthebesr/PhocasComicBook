extends layout

block scripts
    script(type='text/javascript').
      var nextSetTitle = !{JSON.stringify(nextSetTitle)};
      var prevSetTitle = !{JSON.stringify(prevSetTitle)};

    script(src='/javascript/comic_page.js')

block content
    head
        link(rel='stylesheet', href='/stylesheets/style-page.css')
        link(rel='stylesheet', href='/stylesheets/rating.css')
        link(rel='stylesheet', href='/stylesheets/font-awesome.css')
        script(src='/javascript/rating.js')
        title Phocas Star Rating
        
    body

        nav.o-home-nav
            a.o-home-nav__link(href='/')
                //i.fa.fa-arrow-left
                .fa-1x Home 

        nav.o-home-nav
            if(loggedin === 1)
                a.o-home-nav__link(href='/edit_comic')
                    //i.fa.fa-arrow-left
                    .fa-1x Create
            else
                a.o-home-nav__link(href='/login')
                    //i.fa.fa-arrow-left
                    .fa-1x Create

        nav.o-header-nav
            if(loggedin === 1)
                a.o-header-nav__link(href='/manage_comics')
                    //i.fa.fa-arrow-left
                    .fa-1x Manage
            else
                a.o-header-nav__link(href='/login')
                    //i.fa.fa-arrow-left
                    .fa-1x Manage
            
            form#form
                input#search-input(type='hidden', placeholder='Find a Comic', autocomplete = "off")
                #button-holder

            if(loggedin === 1)
                p.fa-xx Welcome,
                .fa-2x= username
                a.o-header-nav__link(href='/logout')
                    .fa-1x Log out
                    //i.fa.fa-star
            else
                a.o-header-nav__link(href='/login')
                    .fa-1x Log in
                    //i.fa.fa-star

        header.o-header
            .o-container
                a(href='/')
                    h1.o-header__title Phocas
    #prev           
        #btnPrev 
            button(class="btn") Previous
    #next       
        #btnNext
            button(class="btn") Next
        
    
    
     main.o-content
        .o-container
            .o-section
                #section
                    h2 #{title}
                    #editComicBottom
                        a(href='/edit_comic/' + title) Edit this comic!
                    ul
                        each image, i in imageList
                            li
                                img(class="uploadedImage", src='#{image.imageUrl}')
                                    



